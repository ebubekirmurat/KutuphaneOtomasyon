@model IEnumerable<kutuphaneAPI.Class.Kitap>

@{
    ViewData["Title"] = "Kitaplar";
}

<style>
    /* ----------- NAV BUTONLAR ----------- */
    .nav-btn {
        background: #2e3a87;
        color: white !important;
        padding: 8px 16px;
        border-radius: 6px;
        margin-right: 8px;
        transition: .3s;
        font-weight: 500;
        text-decoration: none !important; /* ALT ÇİZGİ YOK */
        display: inline-block;
    }

        .nav-btn:hover {
            background: #1f2a60;
            transform: translateY(-3px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.25);
            text-decoration: none !important;
        }

    /* ----------- TABLO TEMA ----------- */
    .styled-table {
        border-radius: 12px;
        overflow: hidden;
        animation: fadeInTable 1.2s ease forwards;
        background-color: #212b66 !important;
        color: #e6e9ff !important;
    }

        .styled-table thead tr {
            background-color: #2e3a87 !important;
            color: #fff !important;
            font-weight: bold;
            font-size: 1.05rem;
        }

        .styled-table td, .styled-table th {
            border-bottom: 1px solid rgba(255,255,255,0.15) !important;
            padding: 14px;
        }

        .styled-table tbody tr:hover {
            background-color: rgba(255,255,255,0.12) !important;
            transition: 0.25s;
            cursor: pointer;
        }

    @@keyframes fadeInTable {
        from {
            opacity: 0;
            transform: translateY(15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ----------- İKONLAR ----------- */
    .action-icon {
        font-size: 1.2rem;
        color: #e6e9ff;
        transition: 0.25s;
        text-decoration: none !important;
        margin: 0 4px;
    }

        .action-icon:hover {
            color: #00ff9e;
            transform: scale(1.2);
        }

    /* ----------- SAYFA BAŞLIĞI ----------- */
    .page-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 15px;
        color: #2e3a87;
        animation: fadeTitle .9s ease forwards;
        opacity: 0;
    }

    @@keyframes fadeTitle {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<h2 class="page-title">📚 Kitaplar</h2>

<p>
    <a asp-controller="Kitap" asp-action="Create" class="nav-btn">➕ Kitap Ekle</a>
    <a asp-controller="Kitap" asp-action="Index" class="nav-btn">📘 Kitaplar</a>
    <a asp-controller="Rezervasyon" asp-action="Index" class="nav-btn">📝 Rezervasyon Yap</a>
    <a asp-controller="Rezervasyon" asp-action="Rezervasyonlar" class="nav-btn">📄 Rezervasyonlar</a>
</p>

<table class="table styled-table w-100">
    <thead>
        <tr>
            <th>Kitap Adı</th>
            <th>Yazar Adı</th>
            <th>Yayınevi</th>
            <th>Basım Yılı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.KitapAdi)</td>
                <td>@Html.DisplayFor(modelItem => item.YazarAdi)</td>
                <td>@Html.DisplayFor(modelItem => item.Yayinevi)</td>
                <td>@Html.DisplayFor(modelItem => item.BasimYili)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.KitapId" class="action-icon" data-bs-toggle="tooltip" title="Güncelle">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.KitapId" class="action-icon" data-bs-toggle="tooltip" title="Ayrıntılar">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.KitapId" class="action-icon" data-bs-toggle="tooltip" title="Sil">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
