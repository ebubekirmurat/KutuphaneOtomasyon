<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Kütüphane Rezervasyon Sistemi</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/kutuphaneRezervasyon.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        /* NAVBAR */
        .navbar-custom {
            background: #2e3a87;
            box-shadow: 0 3px 8px rgba(0,0,0,0.15);
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link {
                color: #fff !important;
                transition: 0.2s;
            }

                .navbar-custom .nav-link:hover {
                    color: #cdd6ff !important;
                }

        /* FOOTER */
        footer {
            background: #f5f5f5;
            padding: 15px 0;
            font-size: 0.9rem;
            margin-top: 40px;
            border-top: 1px solid #ddd;
        }

        /* ANA ALAN */
        main {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.05);
            margin-top: 15px;
        }
    </style>
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                <i class="bi bi-book-half"></i> Kütüphane Rezervasyon
            </a>

            <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse"
                    data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Rezervasyon" asp-action="Index">Rezervasyonlar</a>
                    </li>
                </ul>

                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <!-- İÇERİK -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="text-center text-muted">
        <div class="container">
            © 2025 Kütüphane Rezervasyon Sistemi
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
