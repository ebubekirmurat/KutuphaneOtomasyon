@page
@model LoginModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container my-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-4">
            <section class="card shadow-lg p-4 rounded-3 bg-light login-card animate__animated animate__fadeIn">
                
                <form id="account" method="post">
                    <h5 class="text-center mb-3">Giriş yapmak için yerel bir hesap kullanın.</h5>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">E-Mail</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Şifre</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <button id="login-submit" type="submit" class="w-100 btn btn-outline-primary btn-lg mb-3 hover-shadow">Giriş</button>

                    <div class="text-center">
                        <p><a id="forgot-password" asp-page="./ForgotPassword" class="link-primary">Parolamı Unuttum</a></p>
                        <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-primary">Yeni Kullanıcı Oluştur</a></p>
                    </div>
                </form>
            </section>
        </div>

        <div class="col-md-6 col-md-offset-2">
            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <section class="card shadow-lg p-4 rounded-3 bg-light mt-4 animate__animated animate__fadeInRight">
                    <h5 class="text-center mb-3">Dış Hesaplarla Giriş Yap</h5>
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-center">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-primary m-1 hover-shadow" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                @provider.DisplayName
                            </button>
                        }
                    </form>
                </section>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .login-card {
        background: linear-gradient(135deg, #e0f7fa, #80deea);
    }

    .hover-shadow:hover {
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        transform: translateY(-2px);
        transition: 0.3s;
    }

    a.link-primary:hover {
        text-decoration: underline;
        color: #0275d8;
    }
</style>
